# ============================================
# FRONTEND ENVIRONMENT VARIABLES (React)
# ============================================
# Note: React env vars must be prefixed with REACT_APP_

# Cloudflare Turnstile Site Key (for client-side bot protection)
# Test key for development (always passes):
REACT_APP_TURNSTILE_SITE_KEY=1x00000000000000000000AA
# Production key (get from Cloudflare dashboard):
# REACT_APP_TURNSTILE_SITE_KEY=your-production-site-key

# ============================================
# SOCIAL MEDIA API KEYS (Frontend)
# ============================================
# Twitter API Bearer Token
REACT_APP_TWITTER_BEARER_TOKEN=YOUR_BEARER_TOKEN_HERE

# Twitch API
REACT_APP_TWITCH_CLIENT_ID=YOUR_TWITCH_CLIENT_ID
REACT_APP_TWITCH_ACCESS_TOKEN=YOUR_TWITCH_ACCESS_TOKEN

# YouTube API
REACT_APP_YOUTUBE_API_KEY=YOUR_YOUTUBE_API_KEY
REACT_APP_YOUTUBE_CHANNEL_ID=YOUR_YOUTUBE_CHANNEL_ID

# ============================================
# SOLANA NETWORK CONFIGURATION
# ============================================
# Options: 'devnet', 'testnet', 'mainnet-beta'
REACT_APP_SOLANA_NETWORK=mainnet-beta

# ============================================
# BACKEND ENVIRONMENT VARIABLES (Server)
# ============================================
# Copy these to /server/.env for backend configuration

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/juangunner4

# ============================================
# JWT CONFIGURATION
# ============================================
# JWT secret key (minimum 32 characters - change in production!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRE=7d

# ============================================
# CLOUDFLARE TURNSTILE (BOT PROTECTION)
# ============================================
# Get your keys from: https://dash.cloudflare.com/
# Test keys for development (always passes):
CLOUDFLARE_TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA
CLOUDFLARE_TURNSTILE_SITE_KEY=1x00000000000000000000AA

# ============================================
# SOCIAL MEDIA API KEYS (Backend)
# ============================================
# Twitter API Bearer Token
TWITTER_BEARER_TOKEN=YOUR_BEARER_TOKEN_HERE

# Twitch API
TWITCH_CLIENT_ID=YOUR_TWITCH_CLIENT_ID
TWITCH_ACCESS_TOKEN=YOUR_TWITCH_ACCESS_TOKEN

# YouTube API
YOUTUBE_API_KEY=YOUR_YOUTUBE_API_KEY
YOUTUBE_CHANNEL_ID=YOUR_YOUTUBE_CHANNEL_ID

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=4000
NODE_ENV=development

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# For contact form emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880
# Allowed file types for uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ============================================
# RATE LIMITING
# ============================================
# API rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING
# ============================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info
