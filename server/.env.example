# Copy this file to .env and fill in the values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/juangunner4
# OR for MongoDB Atlas (Production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/juangunner4?retryWrites=true&w=majority

# ============================================
# JWT CONFIGURATION
# ============================================
# IMPORTANT: Use a strong, random secret in production (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# ============================================
# CLOUDFLARE TURNSTILE (BOT PROTECTION)
# ============================================
# Get keys from: https://dash.cloudflare.com/
# Test keys for development:
# Site Key: 1x00000000000000000000AA
# Secret Key: 1x0000000000000000000000000000000AA
CLOUDFLARE_TURNSTILE_SECRET_KEY=your-cloudflare-turnstile-secret-key
CLOUDFLARE_TURNSTILE_SITE_KEY=your-cloudflare-turnstile-site-key

# ============================================
# SOCIAL MEDIA API CREDENTIALS
# ============================================
# Twitter API (for feed integration)
TWITTER_BEARER_TOKEN=

# Twitch API (for stream integration)
TWITCH_CLIENT_ID=
TWITCH_ACCESS_TOKEN=

# YouTube API (for video integration)
YOUTUBE_API_KEY=
YOUTUBE_CHANNEL_ID=

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=4000
NODE_ENV=development
# Set to 'production' in production environment

# ============================================
# CORS CONFIGURATION
# ============================================
# Leave empty to use default allowed origins
# Set to '*' to allow all origins (not recommended for production)
# Or specify your production domain:
# CORS_ORIGIN=https://juangunner4.com
CORS_ORIGIN=

# ============================================
# EMAIL SERVICE (OPTIONAL - for email verification and password reset)
# ============================================
# SMTP Configuration (e.g., Gmail, SendGrid, AWS SES)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@juangunner4.com

# ============================================
# APPLICATION URL
# ============================================
# Used for generating links in emails
APP_URL=http://localhost:3000
# In production: APP_URL=https://juangunner4.com
